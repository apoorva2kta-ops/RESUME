    *{box-sizing:border-box;margin:0;padding:0;font-family:'Poppins',sans-serif}
    body{background:var(--light);color:var(--primary);line-height:1.7}
    .wrapper{max-width:1100px;margin:auto;padding:50px 20px}

    /* Header */
    header{display:grid;grid-template-columns:1fr 1fr;gap:30px;align-items:center;margin-bottom:50px}
    header h1{font-size:2.8rem;font-weight:700}
    header h1 span{color:var(--accent)}
