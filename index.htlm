    /* Sections */
    section{background:var(--card);border-radius:18px;padding:30px;margin-bottom:28px;box-shadow:0 20px 40px rgba(0,0,0,0.06)}
    section h2{font-size:1.4rem;margin-bottom:18px;color:var(--accent)}

    .item{margin-bottom:22px}
    .item h3{font-size:1.05rem;font-weight:600}
    .item span{font-size:0.85rem;color:var(--muted)}
    ul{padding-left:20px;margin-top:8px}
    ul li{margin-bottom:6px}

    /* Grid sections */
    .grid-2{display:grid;grid-template-columns:1fr 1fr;gap:25px}
    .skills{display:flex;flex-wrap:wrap;gap:10px}
    .skill{background:#ede9fe;color:#5b21b6;padding:7px 14px;border-radius:30px;font-size:0.85rem}

    footer{text-align:center;margin-top:40px;font-size:0.85rem;color:var(--muted)}

    @media(max-width:900px){
      header{grid-template-columns:1fr;text-align:center}
      .contact{text-align:center}
      .grid-2{grid-template-columns:1fr}
    }
